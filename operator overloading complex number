
#include <iostream>
using namespace std;
class Complex{
    int real,imag;
public:
    Complex(int r =0,int i =0){
        real =r;
        imag = i;
    }
    Complex operator+(Complex &obj){
        Complex res;
        res.real = real +obj.real;
        res.imag = imag +obj.imag;
        return res;
    }
    void disp(){
        cout << real << " +i" << imag <<endl;
    }
};
int main() {
    Complex c1(18,7),c2(4,5);
    Complex c3 = c1+c2;
    c3.disp();
    return 0;
}
/*
Output:
22 +i12
*/
